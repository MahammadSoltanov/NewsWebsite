@page
@using Application.Common.Models;
@model Presentation.Pages.Admin.Approve.PostTranslationsStatusModel
@{
}

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <button type="button" onclick="location.href='@Url.Page("/Admin/Pos/AddPost")'" class="btn btn-primary">Add Post</button>
            <div class="card-tools">
                <button type="button" class="btn " data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn " data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <form method="post" asp-page-handler="ChangeStatus">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            @foreach (var property in typeof(PostTranslationDto).GetProperties())
                            {
                                if (property.Name == "Id" || property.Name == "Title" || property.Name == "Status")
                                {
                                    <th>@property.Name</th>
                                }
                            }
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (PostTranslationDto post in Model.Posts)
                        {
                            <tr>
                                @foreach (var property in typeof(PostTranslationDto).GetProperties())
                                {
                                    if (property.Name == "Id" || property.Name == "Title" || property.Name == "Status")
                                    {
                                        <td>@property.GetValue(post)</td>
                                    }
                                }
                                <td class="project-actions text-right">
                                    <input type="hidden" name="id" value="@post.Id" />
                                    <select name="status" id="inputStatus" class="form-control custom-select">
                                        <option selected disabled>Select status</option>
                                        <option>Published</option>
                                        <option>Pending</option>
                                        <option>Draft</option>
                                        <option>Deleted</option>
                                        <option>Scheduled</option>
                                    </select>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <input type="hidden" name="selectedValues" id="selectedPosts" />
                <button class="btn btn-primary btn-sm"
                        id="buttonStatus"
                        type="submit"
                        style="margin: 5px 0px;">
                    <i class="fas fa-check">
                    </i>
                    Change statuses
                </button>
            </form>
        </div>
    </div>
</section>

@section Scripts{
    <script>
        var selectedValues = [];

        document.addEventListener("DOMContentLoaded", function () {
            var selectElements = document.querySelectorAll('select[name="status"]');
            selectElements.forEach(function (select) {
                select.addEventListener("change", function () {
                    var postId = select.closest("tr").querySelector('input[name="id"]').value;
                    var status = select.value;
                    console.log(postId);
                    console.log(status);
                    var existingIndex = selectedValues.findIndex(function (item) {
                        return item.id === postId;
                    });

                    if (existingIndex !== -1) {
                        selectedValues[existingIndex].status = status;
                    } else {
                        selectedValues.push({ id: postId, status: status });                        
                    }
                });
            });
        });

        document.getElementById("buttonStatus").addEventListener("click", function (e) {            
            var selectedValuesInput = document.getElementById("selectedPosts");
            selectedValuesInput.value = JSON.stringify(selectedValues);
            console.log(selectedValuesInput);
        });
    </script>
}                                            