@page
@model Presentation.Pages.Admin.Pos.PostDetailsModel
@{
    ViewBag.Title = "Post Details";
}
@using Domain.Entities;
<section>
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-header" style="font-size: 20px">
                General information on post
            </div>

            <div class="card-body">
                <dl>
                    <dt>Title image:</dt>
                    <dd>
                        <img src="@Model.Post.TitleImageUrl" />
                    </dd>
                    <dt>Id:</dt>
                    <dd>@Model.Post.Id</dd>
                    <dt>Category id:</dt>
                    <dd>@Model.Post.CategoryId</dd>
                </dl>
            </div>
        </div>
    </div>


    @foreach (var translation in Model.Translations)
    {
        var language = Model.Languages.Find(l => l.Id == translation.LanguageId).Title;
        <div class="col-12">
            <div class="card card-primary card-outline card-outline-tabs">
                <div class="card-header p-0 border-bottom-0">
                    <ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="custom-tabs-four-home-tab" data-toggle="pill" href="#custom-tabs-four-home" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true">@language</a>
                        </li>

                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="custom-tabs-four-tabContent">

                        <div class="tab-pane fade show active" id="custom-tabs-four-home" role="tabpanel" aria-labelledby="custom-tabs-four-home-tab">
                            <dl>
                                <dt>Title: </dt>
                                <dd>@translation.Title</dd>
                                <dt>Content: </dt>
                                <dd>@Html.Raw(translation.Content)</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
