                            <form>
                                <div class="form-group">
                                    <label for="inputName">Title</label>
                                    <input type="text" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Content</label>
                                    <div class="summernote">AZE Editor</div>
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Language ID</label>
                                    <input type="number" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Author ID</label>
                                    <input type="number" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputStatus">Status</label>
                                    <select id="inputStatus" class="form-control custom-select">
                                        <option>Published</option>
                                        <option>Editing</option>
                                        <option>Pending</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Insert Date</label>
