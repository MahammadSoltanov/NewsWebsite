@page
@model Presentation.Pages.Admin.Lists.PostsModel
@{
    ViewBag.Title = "Posts";
}
@using Application.Common.Models;
@using Domain.Entities;


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <button type="button" onclick="location.href='@Url.Page("/Admin/Pos/AddPost")'" class="btn btn-primary">Add Post</button>
            <div class="card-tools">
                <button type="button" class="btn " data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn " data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        @foreach (var property in typeof(PostTranslationDto).GetProperties())
                        {
                            if (property.Name != "Id" && property.Name != "Content")
                            {
                                <th>@property.Name</th>
                            }
                        }
                        <th style="width: 20%">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PostTranslationDto post in Model.Posts)
                    {
                        <tr>
                            @foreach (var property in typeof(PostTranslationDto).GetProperties())
                            {
                                if (property.Name != "Id" && property.Name != "Content")
                                {
                                    <td>@property.GetValue(post)</td>
                                }
                            }
                            <td class="project-actions text-right">
                                <form method="post">
                                    <a class="btn btn-primary btn-sm"
                                       asp-page="/Admin/Pos/PostDetails"
                                       asp-route-id="@post.PostId">
                                        <i class="fas fa-folder">
                                        </i>
                                        View
                                    </a>
                                    <a class="btn btn-info btn-sm"
                                       asp-page="/Admin/Pos/EditPost"
                                       asp-route-id="@post.PostId">
                                        <i class="fas fa-pencil-alt">

                                        </i>
                                        Edit
                                    </a>
                                    <button class="btn btn-danger btn-sm"
                                            type="submit"
                                            asp-page-handler="Delete"
                                            asp-route-id="@post.PostId">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>

@section Scripts
    {
    <!-- jQuery -->
    <script src="~/lib/admin-lte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/admin-lte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/admin-lte/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/lib/admin-lte/dist/js/demo.js"></script>
}

@section Links
    {
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/admin-lte/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/lib/admin-lte/dist/css/adminlte.min.css">
}